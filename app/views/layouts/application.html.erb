<!DOCTYPE html>
<html>
  <head>
    <title>Tumblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag       'favicon.ico' %>

    <%= stylesheet_link_tag    'application', 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'https://code.jquery.com/jquery-3.4.1.slim.min.js' %>
    <%= javascript_include_tag 'application', 'https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js' %>
    <%= javascript_include_tag 'application', 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="http://localhost:3000"><img src="https://nubecolectiva.com/img/logo.png" class="img-fluid"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarsExample07">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="http://localhost:3000">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="posts/new">Crear Post</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Post Feed</a>
              </li> 
            </ul>
          </div>
          
        </div>        
      </nav>

      <nav class="nav flex-column">
        <a class="nav-link active" href="/">Tumblr</a>
        <a class="nav-link" href="/">Posts</a>
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">About</a>

        <p class="sing_in">Iniciar Sesi√≥n</p>
      </nav>

      <% flash.each do |nombre, mensaje| %>
        <%= content_tag(:div, mensaje, class: "alert") %>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
